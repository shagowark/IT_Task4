<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="Bus Stop Simulation" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Arrive Bus" Click="ArriveBus_Click" Margin="5"/>
            <Button Content="Board Passenger" Click="BoardPassenger_Click" Margin="5"/>
            <Label x:Name="busCapacityLabel" Content="Bus Capacity: " Margin="5"/>
        </StackPanel>
    </Grid>

</Window>
